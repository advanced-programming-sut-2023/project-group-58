<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.controls.LoginRegisterMenuControl"
            stylesheets="@../CSS/login.css"
            styleClass="background"
            prefHeight="800.0" prefWidth="1530.0">
    <center>
        <fx:define>
            <ToggleGroup fx:id="group"/>
        </fx:define>
        <VBox alignment="CENTER" maxWidth="400" spacing="40">
        <Label text="Pick a question:" styleClass="Label"/>
            <RadioButton toggleGroup="$group" text="What is your father’s name?"/>
            <RadioButton toggleGroup="$group" text="What was your first pet’s name?"/>
            <RadioButton toggleGroup="$group" text="What is your mother’s last name?"/>
        </VBox>
    </center>
</BorderPane>