<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/javafx"
            fx:controller="view.controls.LoginRegisterMenuControl"
            stylesheets="@../CSS/login.css"
            styleClass="background"
            prefHeight="800.0" prefWidth="1530.0">
    <center>
        <VBox alignment="CENTER" spacing="15">
            <Label text="welcome!" fx:id="sample" styleClass="fancyStyle"/>
            <TextField promptText="username" maxWidth="200" styleClass="textStyle"/>
            <PasswordField promptText="password" maxWidth="200"  styleClass="textStyle"/>
            <HBox alignment="CENTER" spacing="2">
                <Button text="Login"  styleClass="mainButton"/>
                <Button text="Guest"  styleClass="mainButton"/>
            </HBox>
            <Button text="Don't have an account? register!" styleClass="otherButtons"/>
        </VBox>
    </center>
</BorderPane>


